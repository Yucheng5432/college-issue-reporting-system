 <div class="createPost">
    <h2>Create a Post</h2>
  <div class="createpostForm">  
      <form id="createpostForm" action="/posts" method="POST">
        <input type="text" id="title" name="title" placeholder="Title" class ="create-post-input"><br>
        <textarea type="text" id="body" name="body" placeholder="Description" class="create-post-body"></textarea><br>
        <textarea type="text" id="tags" name="tags" placeholder="Tags" class ="create-post-tag" ></textarea><br>
        <button type="submit" class="post-button">post</button>
      </form>
  </div>
    {{#if error}}
      <div id="createPost-error" class="error">
          <h3>{{error_message}}</h3>
      </div>
    {{/if}}
  </div>

  <div class="private">
   {{!-- <h2 class="allposts">All Posts</h2> --}}

          {{#if posts.length}}
          {{#each posts}}
              <div class="card">
                  <div class="innercard">
                            <h4 class="postsTitle">{{title}}</h4>
                      <div class="postsdate-div">
                            <label class="postsdate">by {{username}} on {{date}}</label>
                      </div>
                            <p>{{body}}</p> 
                            {{!-- <p id='postId'>post id {{this._id}}</p> --}}
                            <label>Tag:</label>
                            {{#if tags.length}}
                            {{#each tags}}
                            <label class="taglable">{{this}}</label>
                            {{/each}}
                            {{/if}}
                      <div class="commentsCard">
                            <br>
                            <label class="comments">Comments</label>
                            <br>
                        {{#if comments.length}}
                        {{#each comments}}
                            <label class="commentsDate">by {{userName}} on {{date}}:</label>
                            <p>{{answer}}</p>
                            {{#if answer}}
                              <p class="commentresolve">{{body}}</p>
                              {{else}}
                              <p >{{body}}</p>
                            {{/if}}
                            
                          
                            <form  action="/comments/{{_id}}?_method=DELETE" method="POST">
                              <button type="submit">delete</button>
                            </form>
                            
                        {{/each}}
                        {{/if}}
                        <br>  
                        <form id="createComment" action="/comments/{{_id}}" method="POST">
                          {{!-- <p>{{_id}}</p> --}}
                          <textarea type="text" id="comment" name="comment" placeholder="reply here" class="createComment"></textarea><br>
                          <button type="submit">comment</button>
                        </form>
                      </div>
                  </div>
              </div>
          {{/each}}
          {{/if}}

  </div>

</div>

